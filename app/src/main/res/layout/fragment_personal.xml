<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/personalbackground">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personalHead_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/fish" />

            <TextView
                android:id="@+id/personalHead_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="40dp"
                android:text="点击上传"
                android:textSize="25dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/personData_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/person_data"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/personData_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="个人资料"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray_light"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/harvestAddress_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/harvestaddress"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/harvestAddress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="收货地址"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray_light"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/logout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
       <TextView
           android:id="@+id/logout_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="退出登录"
           android:textColor="@color/black"
           android:textSize="18dp"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray_light"/>


</LinearLayout>