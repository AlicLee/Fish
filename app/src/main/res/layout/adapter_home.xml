<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="10dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/head" />

        <TextView
            android:id="@+id/home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="@dimen/mp_16"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/f_17" />

        <ImageView
            android:id="@+id/home_adapter_img"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/mp_10"
            android:layout_weight="0.88"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="张三：你傻吧"
                android:textSize="@dimen/f_17" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comment_homeImg"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@mipmap/comment" />

                <ImageView
                    android:id="@+id/share_homeImg"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@mipmap/share" />
            </LinearLayout>
        </LinearLayout>

        <com.example.kys.fish.customwidget.CommentListTextView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mp_10">

        </com.example.kys.fish.customwidget.CommentListTextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <Button
                android:id="@+id/pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:text="评论" />

            <EditText
                android:layout_toLeftOf="@+id/pinglun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/mp_2"
                android:hint="评论"
                android:padding="5dp"
                android:background="@drawable/comment_drawable"
                />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
