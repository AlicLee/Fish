<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:paddingLeft="10dp"
        android:weightSum="1">
     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/home_head"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:src="@mipmap/head"
         />
        <TextView
            android:id="@+id/home_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp_16"
           android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp"
            android:textSize="@dimen/f_17"
            />
        <ImageView
            android:id="@+id/home_adapter_img"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/mp_10"
          android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.88" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="张三：你傻吧"
                android:textSize="@dimen/f_17" />

            <ImageView
            android:id="@+id/comment_homeImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
           android:src="@mipmap/comment"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="4dp"/>
        <ImageView
            android:id="@+id/share_homeImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/share"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/mp_22">
        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f_30"
            android:text="甲乙丙:"
            android:textSize="@dimen/f_17"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/f_30"
            android:text="你肆不肆傻"
            android:textSize="@dimen/f_17"
            android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
