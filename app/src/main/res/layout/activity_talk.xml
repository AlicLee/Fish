<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kys.fish.view.main.TalkActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/mp_22"
        android:weightSum="1">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/fish"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.03" />
    <TextView
        android:id="@+id/talk_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表"
        android:layout_marginLeft="245dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
       /></LinearLayout>

    <EditText
        android:id="@+id/add_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="留下珍贵的记忆........"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/f_10"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="@null"
        style="?android:attr/textViewStyle"/>
    <ImageView
        android:id="@+id/addTalk_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/add_talk"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_recycleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
