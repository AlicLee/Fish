<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.kys.fish.view.login.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tablayout_header">

        <ImageView
            android:layout_width="@dimen/mp_40"
            android:layout_height="@dimen/mp_40"
            android:paddingBottom="@dimen/mp_4"
            android:paddingTop="@dimen/mp_4"
            android:src="@mipmap/left_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/f_18" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phone_edit"
        style="@style/LoginEditStyle"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/nickname_editleft_selector"
        android:hint="请输入手机号"
        android:inputType="number" />

    <EditText
        android:id="@+id/passWord_edit"
        style="@style/LoginEditStyle"
        android:layout_marginTop="@dimen/mp_10"
        android:drawableLeft="@drawable/password_editleft_selector"
        android:hint="请输入密码"
        android:password="true" />

    <EditText
        android:id="@+id/register_name"
        style="@style/LoginEditStyle"
        android:layout_marginTop="@dimen/mp_10"
        android:drawableLeft="@drawable/name_editleft_selector"
        android:hint="请输入姓名" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mp_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verifyCode_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mp_10"
            android:layout_toLeftOf="@+id/verifyCode_btn"
            android:drawableLeft="@drawable/verifycode_editleft_selector"
            android:paddingLeft="@dimen/mp_10"
            android:textSize="@dimen/f_20" />

        <TextView
            android:id="@+id/verifyCode_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mp_10"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/f_20" />
    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mp_10"
        android:background="@drawable/login_btn_bg"
        android:text="  注         册  "
        android:textColor="@color/white"
        android:textSize="@dimen/f_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/bottom_bg" />
    </RelativeLayout>
</LinearLayout>
